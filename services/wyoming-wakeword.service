[Unit]
Description=Wyoming Wake Word Service
After=network.target sound.target
Before=wyoming-satellite.service

[Service]
Type=simple
User=admin
Group=admin
WorkingDirectory=/home/admin
Environment=PATH=/home/admin/.wyoming/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/usr/local/bin/wyoming/scripts/run-wakeword.py
Restart=always
RestartSec=1
TimeoutStartSec=300
TimeoutStopSec=300

[Install]
WantedBy=multi-user.target